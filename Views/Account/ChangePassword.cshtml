@model Lexiconn.ViewModels.ChangePasswordViewModel

@{
    ViewData["Title"] = "Зміна паролю";
}

<h1>Зміна паролю користувача @User.Identity.Name</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="ChangePassword">
            <div class="form-group">
                <label asp-for="OldPassword" class="control-label">Старий пароль</label>
                <input type="password" asp-for="OldPassword" class="form-control" />
                <span asp-validation-for="OldPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewPassword" class="control-label">Новий пароль</label>
                <input type="password" asp-for="NewPassword" class="form-control" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Зберегти" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>