@model Lexiconn.Models.WordData

@{
    ViewData["Title"] = "Редагування запису";
}

<h4>Редагування запису</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="EditConfirmed">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Word" class="control-label"></label>
                <input asp-for="Word" class="form-control" />
                <span asp-validation-for="Word" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="LanguageId" class="control-label"></label>
                <select name="langId" asp-for="LanguageId" class="form-control" asp-items="@ViewBag.LanguageList"></select>
            </div>

            <div class="form-group">
                <label asp-for="CategoryId" class="control-label"></label>
                <select name="catId" asp-for="CategoryId" class="form-control" asp-items="@ViewBag.CategoryList"></select>
            </div>

            <div class="form-group">
                <label asp-for="Translation" class="control-label"></label>
                <input asp-for="Translation" class="form-control" />
                <span asp-validation-for="Translation" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Зберегти" class="btn btn-primary" />
            </div>

            <div class="form-group">
                <input type="hidden" name="wordId" value="@ViewBag.WordId" />
            </div>

            <div class="form-group">
                <input type="hidden" name="translationId" value="@ViewBag.TranslationId" />
            </div>

            <div class="form-group">
                <input type="hidden" name="catWordId" value="@ViewBag.CatWordId" />
            </div>
        </form>
        <a>
            @Html.ActionLink("На головну", "Index", "Home")
        </a>
    </div>
</div>